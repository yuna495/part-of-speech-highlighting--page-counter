{
  "name": "textlint-kernel-linter",
  "displayName": "textlint-kernel-linter",
  "description": "Lint plaintext/markdown with textlint kernel on save and show Problems",
  "version": "1.0.0",
  "publisher": "yuna495",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown"
  ],
  "main": "./src/extension.js",
  "icon": "image/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "linter.lintActiveFile",
        "title": "Linter: Lint Active File"
      },
      {
        "command": "linter.showOutput",
        "title": "Linter: Show Output"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "linter.lintActiveFile",
          "when": "resourceLangId == plaintext || resourceLangId == markdown"
        }
      ]
    },
    "configuration": {
      "title": "Textlint Kernel Linter",
      "properties": {
        "textlintKernelLinter.rules": {
          "type": "object",
          "default": {},
          "markdownDescription": "textlint rules configuration.",
          "additionalProperties": true
        },
        "textlintKernelLinter.lintOnAutoSave": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Run lint on Auto Save (afterDelay / onFocusChange / onWindowChange). If false, only manual save (Ctrl+S)."
        }
      }
    }
  },
  "scripts": {
    "lint": "echo \"no lint\"",
    "test": "echo \"no tests\"",
    "package": "vsce package"
  },
  "dependencies": {
    "@textlint/kernel": "^13.4.1",
    "@textlint/textlint-plugin-markdown": "^12.6.1",
    "@textlint/textlint-plugin-text": "^12.6.1",
    "textlint-rule-ja-no-abusage": "^3.0.0",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-unnatural-alphabet": "^2.0.1",
    "textlint-rule-max-ten": "^5.0.0",
    "textlint-rule-no-doubled-conjunction": "^3.0.0",
    "textlint-rule-no-doubled-joshi": "^5.1.0",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-preset-jtf-style": "^3.0.2"
  },
  "devDependencies": {
    "vsce": "^2.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yuna495/textlint-kernel-linter.git"
  },
  "license": "MIT"
}
