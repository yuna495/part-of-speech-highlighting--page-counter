{
  "name": "part-of-speech-highlighting---page-counter",
  "displayName": "POS & Note (ハイライト+カウンタ+α)",
  "description": "kuromoji による日本語の品詞カラー表示と、ページ・文字カウンタ、見出しの表示・折りたたみ・アクティビティバー表示。",
  "version": "1.4.0",
  "publisher": "yuna495",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Japanese",
    "kuromoji",
    "POS",
    "morphological analysis",
    "Note counter",
    "kinsoku",
    "genko-yoshi"
  ],
  "main": "./src/extension.js",
  "icon": "./image/icon.png",
  "extensionKind": [
    "ui"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:novel",
    "onLanguage:markdown",
    "onLanguage:Novel"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "posNote",
          "title": "POS/Note",
          "icon": "./image/posnote_activitybar_icon.png"
        }
      ]
    },
    "views": {
      "posNote": [
        {
          "icon": "./image/posnote_activitybar_icon.png",
          "id": "posNoteHeadings",
          "name": "見出し（POS/Note）"
        }
      ]
    },
    "semanticTokenScopes": [
      {
        "scopes": {
          "noun": [
            "variable"
          ]
        }
      },
      {
        "scopes": {
          "verb": [
            "keyword"
          ]
        }
      },
      {
        "scopes": {
          "adjective": [
            "type"
          ]
        }
      },
      {
        "scopes": {
          "adverb": [
            "macro"
          ]
        }
      },
      {
        "scopes": {
          "particle": [
            "parameter"
          ]
        }
      },
      {
        "scopes": {
          "auxiliary": [
            "operator"
          ]
        }
      },
      {
        "scopes": {
          "prenoun": [
            "property"
          ]
        }
      },
      {
        "scopes": {
          "conjunction": [
            "label"
          ]
        }
      },
      {
        "scopes": {
          "interjection": [
            "event"
          ]
        }
      },
      {
        "scopes": {
          "symbol": [
            "operator"
          ]
        }
      },
      {
        "scopes": {
          "other": [
            "comment"
          ]
        }
      },
      {
        "scopes": {
          "bracket": [
            "string"
          ]
        }
      },
      {
        "scopes": {
          "fwspace": [
            "whitespace"
          ]
        }
      },
      {
        "scopes": {
          "heading": [
            "heading",
            "entity.name.section",
            "markup.heading",
            "label"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "posNote.refreshPos",
        "title": "POS/Note: 解析を再適用"
      },
      {
        "command": "posNote.toggleNoteCounter",
        "title": "POS/Note: ページカウンタ 有効/無効"
      },
      {
        "command": "posNote.setNoteSize",
        "title": "POS/Note: 行×列を設定"
      },
      {
        "command": "posNote.toggleFoldAllHeadings",
        "title": "POS/Note: 見出しを 全折りたたみ／全展開 トグル"
      },
      {
        "command": "posNote.headings.refresh",
        "title": "POS/Note: 見出しを更新"
      },
      {
        "command": "posNote.headings.minimapRefresh",
        "title": "POS/Note: ミニマップハイライトを更新"
      },
      {
        "command": "posNote.Preview.open",
        "title": "POS/Note: プレビューを開く",
        "icon": "$(book)"
      },
      {
        "command": "posNote.Preview.refresh",
        "title": "POS/Note: 再描画"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "posNote.Preview.open",
          "group": "navigation@100",
          "when": "resourceExtname == .txt"
        }
      ]
    },
    "configuration": [
      {
        "title": "POS & Note - ハイライト",
        "properties": {
          "posNote.semantic.enabled": {
            "type": "boolean",
            "default": true,
            "description": "「.txt / Novel」の品詞ハイライト。"
          },
          "posNote.semantic.enabledMd": {
            "type": "boolean",
            "default": true,
            "description": "「.md」の品詞ハイライト。"
          },
          "posNote.headings.semantic.enabled": {
            "type": "boolean",
            "default": true,
            "description": ".txt/novel で # 見出し行にハイライト。"
          },
          "posNote.semantic.bracketsOverride.enabled": {
            "type": "boolean",
            "default": true,
            "description": "ON: 括弧とその内側を専用色ハイライト。"
          }
        }
      },
      {
        "title": "POS & Note - 見出し折りたたみ",
        "properties": {
          "posNote.headings.folding.enabled": {
            "type": "boolean",
            "default": true,
            "description": ".txt/novel で # 見出しを Markdown と同様に折りたたみ可能にする。"
          },
          "posNote.headings.foldMinLevel": {
            "type": "number",
            "default": 2,
            "minimum": 2,
            "maximum": 6,
            "description": "ショートカットによる『全見出し折りたたみ』で対象とする最小見出しレベル。2なら##以上、3なら###以上を折りたたむ。"
          }
        }
      },
      {
        "title": "POS & Note - ステータスバー",
        "properties": {
          "posNote.enabledNote": {
            "type": "boolean",
            "default": true,
            "description": "ステータスバー上のページカウンタを有効化。"
          },
          "posNote.status.showSelectedChars": {
            "type": "boolean",
            "default": true,
            "description": "ステータスバーに『総字数or選択文字数（改行除外）』を表示する。"
          },
          "posNote.status.countSpaces": {
            "type": "boolean",
            "default": false,
            "description": "『字』カウントに半角/全角スペースを含める（false=含めない）"
          },
          "posNote.aggregate.showDeltaFromHEAD": {
            "type": "boolean",
            "default": true,
            "description": "ステータスバーに Git の直近コミット（HEAD）からの文字数の増減（±）を表示する。"
          },
          "posNote.Note.rowsPerNote": {
            "type": "number",
            "default": 20,
            "minimum": 1,
            "description": "1ページの行数。"
          },
          "posNote.Note.colsPerRow": {
            "type": "number",
            "default": 20,
            "minimum": 1,
            "description": "1行の文字数。"
          },
          "posNote.kinsoku.enabled": {
            "type": "boolean",
            "default": true,
            "description": "禁則処理（行頭禁則）を有効化。"
          }
        }
      },
      {
        "title": "POS & Note - プレビュー",
        "properties": {
          "posNote.Preview.backgroundColor": {
            "type": "string",
            "default": "#111111",
            "markdownDescription": "プレビューの背景色（例: `#ffffff`, `black`, `rgb(30,30,30)` など）"
          },
          "posNote.Preview.textColor": {
            "type": "string",
            "default": "#4dd0e1",
            "markdownDescription": "本文のフォントカラー"
          },
          "posNote.Preview.activeLineBackground": {
            "type": "string",
            "default": "rgba(150, 100, 0, 0.1)",
            "markdownDescription": "プレビュー側でハイライトされる行の背景色"
          },
          "posNote.Preview.fontSize": {
            "type": "number",
            "default": 20,
            "minimum": 8,
            "maximum": 72,
            "markdownDescription": "本文のフォントサイズ（px）。既定: 20"
          },
          "posNote.Preview.showCursor": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "プレビューにカーソル（縦線）を表示するか。false で非表示。"
          },
          "posNote.Preview.posHighlight.enabled": {
            "type": "boolean",
            "default": true,
            "description": "プレビューで品詞ハイライトを有効化（保存時反映）"
          },
          "posNote.Preview.posHighlight.mode": {
            "type": "boolean",
            "default": true,
            "description": "ON: プレビュー画面での品詞ハイライトを適用する。"
          },
          "posNote.Preview.posHighlight.applyToMd": {
            "type": "boolean",
            "default": true,
            "description": ".md でもプレビューPOSハイライトを適用する"
          },
          "posNote.Preview.posHighlight.maxLines": {
            "type": "number",
            "default": 1000,
            "minimum": 200,
            "description": "プレビューでPOS着色する最大行数（パフォーマンス上限）"
          }
        }
      },
      {
        "title": "POS & Note - 更新ディレイ",
        "properties": {
          "posNote.debounceMs": {
            "type": "number",
            "default": 500,
            "description": "タイプ時のステータスバー軽量更新の待ち時間(ms)。"
          },
          "posNote.recomputeIdleMs": {
            "type": "number",
            "default": 1000,
            "minimum": 100,
            "description": "入力後に重いページ計算を遅延実行する待ち時間(ms)。"
          }
        }
      }
    ],
    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": true,
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "verb": {
            "italic": false,
            "foreground": "#11ff84"
          },
          "adjective": "#ffe955",
          "adverb": "#f94446",
          "particle": "#f7f7f7",
          "prenoun": "#e0a000",
          "conjunction": "#ff14e0",
          "symbol": "#fd9bcc",
          "bracket": "#fd9bcc",
          "fwspace": {
            "underline": true,
            "foreground": "#ff0000"
          },
          "heading": "#ff14e0"
        }
      }
    },
    "keybindings": [
      {
        "command": "posNote.toggleFoldAllHeadings",
        "key": "ctrl+[",
        "when": "editorTextFocus && editorLangId == plaintext"
      },
      {
        "command": "posNote.toggleFoldAllHeadings",
        "key": "ctrl+[",
        "when": "editorTextFocus && editorLangId == novel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo \"no build (JS only)\"",
    "package": "vsce package || echo 'Install @vscode/vsce if missing'"
  },
  "dependencies": {
    "kuromoji": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yuna495/part-of-speech-highlighting--page-counter.git"
  },
  "bugs": {
    "url": "https://github.com/yuna495/part-of-speech-highlighting--Note-counter/issues"
  },
  "license": "MIT",
  "homeNote": "https://github.com/yuna495/part-of-speech-highlighting--Note-counter#readme"
}
