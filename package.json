{
  "name": "part-of-speech-highlighting---page-counter",
  "displayName": "日本語 品詞カラー表示＋ページカウンタ",
  "description": "kuromoji による日本語の品詞カラー表示と、禁則処理に対応した原稿用紙スタイルのページカウンタ（選択文字数にも対応）",
  "version": "1.0.0",
  "publisher": "yuna495",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Japanese",
    "kuromoji",
    "POS",
    "morphological analysis",
    "page counter",
    "kinsoku",
    "genko-yoshi"
  ],
  "main": "./extension.js",
  "icon": "icon.png",
  "extensionKind": [
    "ui"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:novel"
  ],
  "contributes": {
    "semanticTokenScopes": [
      {
        "scopes": {
          "noun": [
            "variable"
          ]
        }
      },
      {
        "scopes": {
          "verb": [
            "keyword"
          ]
        }
      },
      {
        "scopes": {
          "adjective": [
            "type"
          ]
        }
      },
      {
        "scopes": {
          "adverb": [
            "macro"
          ]
        }
      },
      {
        "scopes": {
          "particle": [
            "parameter"
          ]
        }
      },
      {
        "scopes": {
          "auxiliary": [
            "operator"
          ]
        }
      },
      {
        "scopes": {
          "prenoun": [
            "property"
          ]
        }
      },
      {
        "scopes": {
          "conjunction": [
            "label"
          ]
        }
      },
      {
        "scopes": {
          "interjection": [
            "event"
          ]
        }
      },
      {
        "scopes": {
          "symbol": [
            "operator"
          ]
        }
      },
      {
        "scopes": {
          "other": [
            "comment"
          ]
        }
      },
      {
        "scopes": {
          "bracket": [
            "string"
          ]
        }
      },
      {
        "scopes": {
          "fwspace": [
            "whitespace"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "posPage.togglePos",
        "title": "POS/Page: 品詞ハイライト 有効/無効"
      },
      {
        "command": "posPage.refreshPos",
        "title": "POS/Page: 解析を再適用"
      },
      {
        "command": "posPage.togglePageCounter",
        "title": "POS/Page: ページカウンタ 有効/無効"
      },
      {
        "command": "posPage.setPageSize",
        "title": "POS/Page: 行×列を設定"
      }
    ],
    "configuration": {
      "title": "POS & Page (Japanese)",
      "properties": {
        "posPage.semantic.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Semantic Tokens で品詞ハイライトを行う。false で品詞ハイライトを無効化"
        },
        "posPage.applyToTxtOnly": {
          "type": "boolean",
          "default": true,
          "description": ".txt（languageId: plaintext）のみ対象にする"
        },
        "posPage.debounceMs": {
          "type": "number",
          "default": 500,
          "description": "タイプ時の再解析ディレイ(ms)"
        },
        "posPage.enabledPos": {
          "type": "boolean",
          "default": true,
          "description": "品詞ハイライトを有効化"
        },
        "posPage.maxDocLength": {
          "type": "number",
          "default": 200000,
          "description": "解析上限（文字数）。超過時はスキップ/部分適用"
        },
        "posPage.enabledPage": {
          "type": "boolean",
          "default": true,
          "description": "ページカウンタ（ステータスバー）を有効化"
        },
        "posPage.recomputeIdleMs": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "description": "入力後に重いページ計算を遅延実行する待ち時間(ms)。タイプ中はキャッシュ表示にし、ここで確定させる。"
        },
        "posPage.page.rowsPerPage": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "1ページの行数"
        },
        "posPage.page.colsPerRow": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "1行の文字数"
        },
        "posPage.kinsoku.enabled": {
          "type": "boolean",
          "default": true,
          "description": "禁則処理（行頭禁則）を有効化"
        },
        "posPage.kinsoku.bannedStart": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "」",
            "）",
            "』",
            "》",
            "】",
            "。",
            "、"
          ],
          "description": "行頭に来ないよう前行へ送る文字（行頭禁則）"
        }
      }
    },
    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": true,
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "verb": "#11ff84",
          "adjective": "#ffd900",
          "adverb": "#f94446",
          "particle": "#f6f7f8",
          "prenoun": "#d48c00",
          "conjunction": "#ff14e0",
          "symbol": "#fd9bcc",
          "bracket": "#fd9bcc",
          "fwspace": {
            "underline": true,
            "foreground": "#ff0000"
          }
        }
      }
    }
  },
  "dependencies": {
    "kuromoji": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "20.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-user/your-repo.git"
  },
  "bugs": {
    "url": "https://github.com/your-user/your-repo/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/your-user/your-repo#readme"
}
