{
  "name": "part-of-speech-highlighting---page-counter",
  "displayName": "POS & Note (ハイライト+カウンタ+α)",
  "description": "kuromoji による日本語の品詞カラー表示と、禁則処理に対応した原稿用紙スタイルのページカウンタ（選択文字数にも対応）",
  "version": "1.3.2",
  "publisher": "yuna495",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Japanese",
    "kuromoji",
    "POS",
    "morphological analysis",
    "Note counter",
    "kinsoku",
    "genko-yoshi"
  ],
  "main": "./src/extension.js",
  "icon": "icon.png",
  "extensionKind": [
    "ui"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:novel",
    "onLanguage:markdown",
    "onLanguage:Novel"
  ],
  "contributes": {
    "semanticTokenScopes": [
      {
        "scopes": {
          "noun": [
            "variable"
          ]
        }
      },
      {
        "scopes": {
          "verb": [
            "keyword"
          ]
        }
      },
      {
        "scopes": {
          "adjective": [
            "type"
          ]
        }
      },
      {
        "scopes": {
          "adverb": [
            "macro"
          ]
        }
      },
      {
        "scopes": {
          "particle": [
            "parameter"
          ]
        }
      },
      {
        "scopes": {
          "auxiliary": [
            "operator"
          ]
        }
      },
      {
        "scopes": {
          "prenoun": [
            "property"
          ]
        }
      },
      {
        "scopes": {
          "conjunction": [
            "label"
          ]
        }
      },
      {
        "scopes": {
          "interjection": [
            "event"
          ]
        }
      },
      {
        "scopes": {
          "symbol": [
            "operator"
          ]
        }
      },
      {
        "scopes": {
          "other": [
            "comment"
          ]
        }
      },
      {
        "scopes": {
          "bracket": [
            "string"
          ]
        }
      },
      {
        "scopes": {
          "fwspace": [
            "whitespace"
          ]
        }
      },
      {
        "scopes": {
          "heading": [
            "heading",
            "entity.name.section",
            "markup.heading",
            "label"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "posNote.refreshPos",
        "title": "POS/Note: 解析を再適用"
      },
      {
        "command": "posNote.toggleNoteCounter",
        "title": "POS/Note: ページカウンタ 有効/無効"
      },
      {
        "command": "posNote.setNoteSize",
        "title": "POS/Note: 行×列を設定"
      },
      {
        "command": "posNote.toggleFoldAllHeadings",
        "title": "POS/Note: 見出しを 全折りたたみ／全展開 トグル"
      }
    ],
    "configuration": [
      {
        "title": "POS & Note - ハイライト",
        "properties": {
          "posNote.semantic.enabled": {
            "type": "boolean",
            "default": true,
            "description": "「.txt / Novel」の品詞ハイライト。"
          },
          "posNote.semantic.enabledMd": {
            "type": "boolean",
            "default": true,
            "description": "「.md」の品詞ハイライト。"
          },
          "posNote.headings.semantic.enabled": {
            "type": "boolean",
            "default": true,
            "description": ".txt/novel で # 見出し行にハイライト。"
          }
        }
      },
      {
        "title": "POS & Note - 見出し折りたたみ",
        "properties": {
          "posNote.headings.folding.enabled": {
            "type": "boolean",
            "default": true,
            "description": ".txt/novel で # 見出しを Markdown と同様に折りたたみ可能にする。"
          },
          "posNote.headings.foldMinLevel": {
            "type": "number",
            "default": 2,
            "minimum": 1,
            "maximum": 6,
            "description": "ショートカットによる『全見出し折りたたみ』で対象とする最小見出しレベル。2なら##以上、3なら###以上を折りたたむ。"
          }
        }
      },
      {
        "title": "POS & Note - ステータスバー",
        "properties": {
          "posNote.enabledNote": {
            "type": "boolean",
            "default": true,
            "description": "ステータスバー上のページカウンタを有効化。"
          },
          "posNote.status.showSelectedChars": {
            "type": "boolean",
            "default": true,
            "description": "ステータスバーに『総字数or選択文字数（改行除外）』を表示する。"
          },
          "posNote.status.countSpaces": {
            "type": "boolean",
            "default": false,
            "description": "『字』カウントに半角/全角スペースを含める（false=含めない）"
          },
          "posNote.aggregate.showDeltaFromHEAD": {
            "type": "boolean",
            "default": true,
            "description": "ステータスバーに Git の直近コミット（HEAD）からの文字数の増減（±）を表示する。"
          },
          "posNote.Note.rowsPerNote": {
            "type": "number",
            "default": 20,
            "minimum": 1,
            "description": "1ページの行数。"
          },
          "posNote.Note.colsPerRow": {
            "type": "number",
            "default": 20,
            "minimum": 1,
            "description": "1行の文字数。"
          },
          "posNote.kinsoku.enabled": {
            "type": "boolean",
            "default": true,
            "description": "禁則処理（行頭禁則）を有効化。"
          }
        }
      },
      {
        "title": "POS & Note - 更新ディレイ",
        "properties": {
          "posNote.debounceMs": {
            "type": "number",
            "default": 500,
            "description": "タイプ時のステータスバー軽量更新の待ち時間(ms)。"
          },
          "posNote.recomputeIdleMs": {
            "type": "number",
            "default": 1000,
            "minimum": 100,
            "description": "入力後に重いページ計算を遅延実行する待ち時間(ms)。"
          }
        }
      }
    ],
    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": true,
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "verb": "#11ff84",
          "adjective": "#ffe955",
          "adverb": "#f94446",
          "particle": "#f7f7f7",
          "prenoun": "#e0a000",
          "conjunction": "#ff14e0",
          "symbol": "#fd9bcc",
          "bracket": "#fd9bcc",
          "fwspace": {
            "underline": true,
            "foreground": "#ff0000"
          },
          "heading": "#ff14e0"
        }
      }
    },
    "keybindings": [
      {
        "command": "posNote.toggleFoldAllHeadings",
        "key": "ctrl+[",
        "when": "editorTextFocus && editorLangId == plaintext"
      },
      {
        "command": "posNote.toggleFoldAllHeadings",
        "key": "ctrl+[",
        "when": "editorTextFocus && editorLangId == novel"
      }
    ]
  },
  "dependencies": {
    "kuromoji": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "20.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yuna495/part-of-speech-highlighting--page-counter.git"
  },
  "bugs": {
    "url": "https://github.com/yuna495/part-of-speech-highlighting--Note-counter/issues"
  },
  "license": "MIT",
  "homeNote": "https://github.com/yuna495/part-of-speech-highlighting--Note-counter#readme"
}
