{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "esbuild-watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "esbuild",
        "pattern": {
            "regexp": "^XXXX",
            "file": 1,
            "location": 2,
            "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[watch\\] build started$",
          "endsPattern": "^\\[watch\\] build finished$"
        }
      },
      "label": "npm: esbuild-watch",
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      }
    }
  ]
}
